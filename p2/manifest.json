{
  "manifest_version": 3,
  "name": "Course Planning Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for UW-Madison course planning and enrollment",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://enroll.wisc.edu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://enroll.wisc.edu/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Course Planning Assistant"
  }
}